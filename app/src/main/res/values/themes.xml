<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QuranApp_MotionLayout" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.QuranApp_MotionLayout" parent="Base.Theme.QuranApp_MotionLayout" />


    <style name="Icons" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/icons_marginTop</item>

    </style>
    <style name="Names" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">@dimen/margin16</item>
        <item name="android:layout_marginBottom">@dimen/margin8</item>
        <item name="android:textSize">@dimen/textSize24</item>
    </style>
    <style name="Index" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingEnd">@dimen/margin16</item>
        <item name="android:layout_marginBottom">@dimen/margin8</item>
        <item name="android:textSize">@dimen/textSize32</item>
    </style>
</resources>